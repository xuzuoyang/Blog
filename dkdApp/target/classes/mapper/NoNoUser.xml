<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dkd.framework.dao.NonoUserDao">
    <!-- 新增 -->
    <insert id="save" parameterType="com.dkd.framework.entity.NonoUser" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO nonobank_user (
	   userName,
	   userId,
	   mobile,
	   idCard,
	   userType,
	   realName,
   	   createTime
		) 
		VALUES(
		#{userName},
	    #{userId},
	    #{mobile},
	    #{idCard},
	    #{userType},
	    #{realName},
        #{createTime}
		)
	</insert>

    <!-- 动态sql查询 -->
    <select id="select" parameterType="map" resultType="com.dkd.framework.entity.NonoUser">
        SELECT * FROM nonobank_user WHERE 1=1
        <if test="userId!=null">
            and userId = #{userId}
        </if>
    </select>
    <!-- 动态sql查询 -->
    <select id="selectByUserId" parameterType="string" resultType="com.dkd.framework.entity.NonoUser">
        SELECT * FROM nonobank_user WHERE 1=1
            and userId = #{userId}
    </select>
    <select id="selectMaxUserId" resultType="int">
        SELECT ifnull(max(userId),500) FROM nonobank_user
    </select>
</mapper>